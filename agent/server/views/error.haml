    %link{rel: "stylesheet", href: '/stylesheets/bootstrap.min.css'}
    :css
      /*exception 404*/
      .error-page h1 span {
        font-weight: bold;
        font-family: "Helvetica Neue",Helvetica,Arial,sans-serif; }
      .error-page p {
        text-align: left; }
      .error-page .error-url {
        text-shadow: 0 0 4px #FFFFFF, 0 -5px 4px #FFFF33, 2px -10px 6px #FFDD33, 2px -15px 11px #FF8800, 2px -25px 18px #FF2200; }
      .error-page .error-title {
        font-size: 0;
        margin: 40px auto;
        text-align: center; }
      .error-page .error-type {
        color: #555555;
        display: block;
        font-size: 16px;
        line-height: 20px; }
      .error-page .center {
        text-align: center; }
      .error-page .text-3d-left, .error-page .text-3d-center, .error-page .text-3d-right {
        display: inline-block;
        font-size: 240px;
        line-height: 240px; }
      .error-page .text-3d-left {
        color: #FFFFFF;
